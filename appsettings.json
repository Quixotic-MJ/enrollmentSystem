{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=enrollmentSystem;Username=postgres;Password=123;Pooling=true;Timeout=30;CommandTimeout=30"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Connection": "Warning"
    }
  },
  "AllowedHosts": "*",
  "SessionSettings": {
    "IdleTimeoutMinutes": 30,
    "CookieName": "EnrollmentSystem.Session",
    "CookieSecurePolicy": "SameAsRequest"
  },
  "ApplicationSettings": {
    "AdminEmail": "admin@enrollmentsystem.com",
    "MaxLoginAttempts": 5,
    "PasswordPolicy": {
      "MinLength": 8,
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequireNonAlphanumeric": true
    }
  }
}