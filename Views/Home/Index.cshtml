    @{
        Layout = null;
    }

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Cebu Technological University | Student Enrollment System</title>

        <script src="https://cdn.tailwindcss.com"></script>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

        <style>
            body {
                font-family: 'Inter', sans-serif;
            }
        </style>
    </head>
    <body class="bg-white min-h-screen flex items-center justify-center">
        <section class="max-w-6xl mx-auto px-4">
            <div class="flex flex-col xl:flex-row items-center text-center xl:text-left">
                <!-- CTU Logo -->
                <div class="mb-8 xl:mb-0 xl:mr-12">
                    <img src="@Url.Content("wwwroot/CTU.png")"
                         alt="CTU Logo"
                         class="w-80 h-80 object-cover rounded-full mx-auto" />
                </div>

                <!-- Text and Buttons -->
                <div class="space-y-4">
                    <h1 class="text-3xl font-semibold text-gray-900">Cebu Technological University</h1>
                    <p class="text-lg text-gray-700">Student Enrollment System</p>
                    <p class="text-gray-600 mt-3">
                        Welcome to the CTU Enrollment System, designed to empower aspiring minds. Explore our leading-edge degree programs, seamlessly manage your application, and step into a future of innovation, research, and community-responsive education.
                    </p>

                    <div class="mt-6 flex flex-wrap justify-center xl:justify-start gap-4">
                        <a href="@Url.Action("Login", "Auth")"
                           aria-label="Login to CTU Student Portal"
                           class="inline-flex items-center justify-center px-6 py-3 text-white text-sm font-medium rounded-lg bg-gray-800 hover:bg-gray-700 shadow-lg transition">
                            <span>Login to Portal</span>
                        </a>

                        <a href="@Url.Action("SignUp", "Auth")"
                           class="inline-flex items-center justify-center px-6 py-3 text-white text-sm font-medium rounded-lg bg-blue-600 hover:bg-blue-700 shadow-lg transition">
                            <span>Sign Up</span>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </body>
    </html>
