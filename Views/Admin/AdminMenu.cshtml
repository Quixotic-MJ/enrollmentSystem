@{
    ViewBag.Title = "Components";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gray-50 min-h-screen">
<section class="bg-white mt-5 shadow-sm">
    <div class="container px-6 py-10 mx-auto max-w-7xl">
        <!-- Header with logout button properly positioned -->
        <div class="relative mb-12">
            <!-- Logout button positioned absolutely in top-right -->
            <a href="@Url.Action("LoginAdmin", "Auth")" class="absolute top-0 right-0 bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-lg transition-colors duration-200 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                </svg>
                Logout
            </a>
            
            <!-- Centered title -->
            <div class="text-center">
                <h1 class="text-3xl font-bold text-gray-800 lg:text-4xl">Admin</h1>
                <p class="mt-4 text-gray-600 text-lg font-medium">
                    Menu
                </p>
            </div>
        </div>

        <!-- Grid layout - changed from xl:grid-cols-5 to xl:grid-cols-4 for better spacing -->
        <div class="grid grid-cols-1 gap-8 mt-8 md:grid-cols-2 xl:grid-cols-4 max-w-7xl mx-auto">
            
            <!-- View Curriculum Card -->
            <a href="@Url.Action("ViewCurriculum", "Admin")" class="transform transition-transform duration-200 hover:scale-105">
                <div class="p-8 border-2 border-blue-400 hover:border-blue-500 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 bg-white h-80 flex flex-col">
                    <div class="flex justify-center mb-4">
                        <span class="inline-block text-blue-500 bg-blue-50 p-3 rounded-full">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                            </svg>
                        </span>
                    </div>

                    <h2 class="text-xl font-semibold text-gray-800 text-center mb-4">View Curriculum</h2>

                    <p class="text-gray-600 text-center leading-relaxed flex-grow">
                        Access and review the complete curriculum structure, course requirements, and academic programs offered by the institution.
                    </p>
                </div>
            </a>

            <!-- Add Course Card -->
            <a href="@Url.Action("AddCourse", "Admin")" class="transform transition-transform duration-200 hover:scale-105">
                <div class="p-8 border-2 border-blue-400 hover:border-blue-500 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 bg-white h-80 flex flex-col">
                    <div class="flex justify-center mb-4">
                        <span class="inline-block text-blue-500 bg-blue-50 p-3 rounded-full">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                            </svg>
                        </span>
                    </div>

                    <h2 class="text-xl font-semibold text-gray-800 text-center mb-4">Add Course</h2>

                    <p class="text-gray-600 text-center leading-relaxed flex-grow">
                        Create and add new courses to the system. Define course details, prerequisites, and credit requirements.
                    </p>
                </div>
            </a>
            
            <!-- Approve Enrollment Card - Fixed typo and updated content -->
            <a href="@Url.Action("ApproveEnrollment", "Admin")" class="transform transition-transform duration-200 hover:scale-105">
                <div class="p-8 border-2 border-blue-400 hover:border-blue-500 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 bg-white h-80 flex flex-col">
                    <div class="flex justify-center mb-4">
                        <span class="inline-block text-blue-500 bg-blue-50 p-3 rounded-full">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        </span>
                    </div>

                    <h2 class="text-xl font-semibold text-gray-800 text-center mb-4">Approve Enrollment</h2>

                    <p class="text-gray-600 text-center leading-relaxed flex-grow">
                        Review and approve student enrollment requests. Manage course registrations and student access permissions.
                    </p>
                </div>
            </a>

            <!-- Create Schedule Card -->
            <a href="@Url.Action("CreateSchedule", "Admin")" class="transform transition-transform duration-200 hover:scale-105">
                <div class="p-8 border-2 border-blue-400 hover:border-blue-500 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 bg-white h-80 flex flex-col">
                    <div class="flex justify-center mb-4">
                        <span class="inline-block text-blue-500 bg-blue-50 p-3 rounded-full">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                        </span>
                    </div>

                    <h2 class="text-xl font-semibold text-gray-800 text-center mb-4">Create Schedule</h2>

                    <p class="text-gray-600 text-center leading-relaxed flex-grow">
                        Build new class schedules by assigning courses to time slots, rooms, and instructors for each semester.
                    </p>
                </div>
            </a>
        </div>
        
        <!-- Second row for View All Schedules - centered -->
        <div class="flex justify-center mt-8">
            <div class="w-full max-w-sm">
                <!-- View All Schedules Card -->
                <a href="@Url.Action("ViewAllSchedule", "Admin")" class="block transform transition-transform duration-200 hover:scale-105">
                    <div class="p-8 border-2 border-blue-400 hover:border-blue-500 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 bg-white h-80 flex flex-col">
                        <div class="flex justify-center mb-4">
                            <span class="inline-block text-blue-500 bg-blue-50 p-3 rounded-full">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
                                </svg>
                            </span>
                        </div>

                        <h2 class="text-xl font-semibold text-gray-800 text-center mb-4">View All Schedules</h2>

                        <p class="text-gray-600 text-center leading-relaxed flex-grow">
                            Browse and manage all existing class schedules. View, edit, or delete schedule configurations as needed.
                        </p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<script>
function handleLogout() {
    Swal.fire({
        title: 'Are you sure?',
        text: "You will be logged out of the system.",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#aaa',
        cancelButtonColor: '#6b7280',
        confirmButtonText: 'Yes, logout',
        cancelButtonText: 'Cancel'
    }).then((result) => {
        if (result.isConfirmed) {
            Swal.fire({
                title: 'Logged Out!',
                text: 'You have been successfully logged out.',
                icon: 'success',
                timer: 1500,
                showConfirmButton: false
            }).then(() => {
                window.location.href = '@Url.Action("Login", "Auth")';
                console.log('Admin logged out');
            });
        }
    });
}
</script>
</body>
</html>