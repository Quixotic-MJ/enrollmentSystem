@{
    ViewBag.Title = "Components";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Student Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gray-50 min-h-screen">
<section class="bg-white mt-5 shadow-sm">
    <div class="container px-6 py-10 mx-auto max-w-7xl">
        <div class="relative mb-12">
            <!-- Logout button positioned absolutely in top-right -->
            <a href="@Url.Action("Login", "Auth")" class="absolute top-0 right-0 bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-lg transition-colors duration-200 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                </svg>
                Logout
            </a>
            
            <!-- Centered title -->
            <div class="text-center">
                <h1 class="text-3xl font-bold text-gray-800 lg:text-4xl">Student</h1>
                <p class="mt-4 text-gray-600 text-lg font-medium">
                    Menu
                </p>
            </div>
        </div>

        <!-- Fixed Grid Layout -->
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8 mt-8 max-w-6xl mx-auto place-items-center">
            
            <!-- Enrollment Form Card -->
            <a href="@Url.Action("Enrollment", "Student")" class="transform transition-transform duration-200 hover:scale-105 w-full max-w-sm">
                <div class="p-8 border-2 border-blue-400 hover:border-blue-500 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 bg-white h-80 flex flex-col">
                    <div class="flex justify-center mb-4">
                        <span class="inline-block text-blue-500 bg-blue-50 p-3 rounded-full">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 21H7a2 2 0 01-2-2V5a2 2 0 012-2h5l5 5v11a2 2 0 01-2 2z"/>
                            </svg>
                        </span>
                    </div>

                    <h2 class="text-xl font-semibold text-gray-800 text-center mb-4">Enrollment Form</h2>

                    <p class="text-gray-600 text-center leading-relaxed flex-grow">
                        Click the Enrollment button to begin the official registration process. You'll be guided through
                        entering your personal details, selecting your desired course or program, and confirming your
                        enrollment for the upcoming semester.
                    </p>
                </div>
            </a>

            <!-- Class Schedule Card -->
            <a href="@Url.Action("Schedule", "Student")" class="transform transition-transform duration-200 hover:scale-105 w-full max-w-sm">
                <div class="p-8 border-2 border-blue-400 hover:border-blue-500 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 bg-white h-80 flex flex-col">
                    <div class="flex justify-center mb-4">
                        <span class="inline-block text-blue-500 bg-blue-50 p-3 rounded-full">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2zm3-9h0m3 0h0m3 0h0"/>
                            </svg>
                        </span>
                    </div>

                    <h2 class="text-xl font-semibold text-gray-800 text-center mb-4">View Class Schedule</h2>

                    <p class="text-gray-600 text-center leading-relaxed flex-grow">
                        View the detailed timetable for all your enrolled courses. Stay organized by
                        knowing the days, times, and locations of your classes in advance.
                    </p>
                </div>
            </a>

            <!-- Profile Card -->
            <a href="@Url.Action("Profile", "Student")" class="transform transition-transform duration-200 hover:scale-105 w-full max-w-sm md:col-span-2 xl:col-span-1">
                <div class="p-8 border-2 border-blue-400 hover:border-blue-500 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 bg-white h-80 flex flex-col">
                    <div class="flex justify-center mb-4">
                        <span class="inline-block text-blue-500 bg-blue-50 p-3 rounded-full">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                            </svg>
                        </span>
                    </div>

                    <h2 class="text-xl font-semibold text-gray-800 text-center mb-4">View Profile</h2>

                    <p class="text-gray-600 text-center leading-relaxed flex-grow">
                        Click here to view your complete student profile, including your contact details, enrollment
                        status, and academic records. Keep your information up-to-date for smooth communication.
                    </p>
                </div>
            </a>
        </div>
    </div>
</section>
</body>
</html>